################################################################
## Packages / Utilities
################################################################

################################################
## Customize
################################################

homeassistant:
  customize:
    ################################################
    ## Node Anchors
    ################################################

    package.node_anchors:
      customize: &customize
        package: 'utilities'

      expose: &expose
        <<: *customize
        haaska_hidden: false
        homebridge_hidden: false

    ################################################
    ## Automation
    ################################################

    automation.nightly_config_backup:
      <<: *customize
      friendly_name: "Nightly Config Backup"
      icon: mdi:backup-restore

    ################################################
    ## Group
    ################################################

    group.utilities:
      <<: *customize
      friendly_name: "Utilities"
      icon: mdi:script

    ################################################
    ## Script
    ################################################

    script.manual_config_backup:
      <<: *customize
      friendly_name: "Manual Config Backup"
      icon: mdi:backup-restore

    script.reload_config:
      <<: *customize
      friendly_name: "Reload Configuration"
      icon: mdi:refresh

    script.restart_hass:
      <<: *customize
      friendly_name: "Restart Home Assistant"
      icon: mdi:power

    script.update_hass:
      <<: *customize
      friendly_name: "Update Home Assistant"
      icon: mdi:upload

################################################
## Group
################################################

group:
  utilities:
    control: hidden
    entities:
      - script.generate_graph
      - script.manual_config_backup
      - script.reload_config
      - script.update_hass
      - script.restart_hass

################################################
## Automation
################################################

automation:
  - alias: nightly_config_backup
    initial_state: 'on'
    trigger:
      - platform: time
        at: '03:00:00'
    action:
      - service: shell_command.manual_config_backup

################################################
## Script
################################################

script:
  manual_config_backup:
    sequence:
      - service: shell_command.manual_config_backup

  reload_config:
    sequence:
      - service: homeassistant.reload_core_config

  restart_hass:
    sequence:
      - service: homeassistant.restart

  update_hass:
    sequence:
      - service: shell_command.update_hass

################################################
## Shell Command
################################################

shell_command:
  manual_config_backup: >-
    $HASS_CONFIG/shell_scripts/backup_config.sh

  update_hass: >-
    /usr/bin/nohup $HASS_CONFIG/shell_scripts/update_hass.sh </dev/null >> $HASS_CONFIG/shell_scripts/update_hass.log 2>&1 &